@model Product
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid mb-4">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.PhotoFile">Image</label>
            <input asp-for="@Model.PhotoFile" accept="image/*" class="form-control col-md-2" rows="3">
            <span asp-validation-for="@Model.PhotoFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Name">Name</label>
            <input type="text" asp-for="@Model.Name" class="form-control" id="Name" placeholder="Name" rows="3">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Price">Price</label>
            <input type="number" asp-for="@Model.Price" class="form-control" id="Price" placeholder="Price" rows="3">
            <span asp-validation-for="@Model.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.TagId" class="form-label">Tag</label>
            <select asp-for="@Model.TagId" class="form-select" asp-items="@(new SelectList(ViewBag.Tags,"Id","Name"))">
                <option value="0">Select Tag</option>
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.TagId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.CategoryIds" class="form-label">Categories</label>
            <select asp-for="@Model.CategoryIds" class="form-select">
                @foreach (var category in ViewBag.Categories)
                {
                    if (Model.ProductCategories.FirstOrDefault(fc => fc.CategoryId == category.Id)
 null)
                        {
                                <option value="@category.Id" selected>@category.Name</option>
                    }
                        else
                    {
                                <option value="@category.Id">@category.Name</option>

                    }
                }
            </select>
            <span class="mt-2 text text-danger" asp-validation-for="@Model.CategoryIds"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

         <a asp-controller="product" asp-action="index">

            <i style="font-size:0.875rem; text-decoration:none;" class="btn btn-dark">Back</i>
        </a>
    </form>
</div>

